<mujoco>
  <option gravity="0 0 -10"/>
  <default>
    <joint armature="0.01" damping="0.1" limited="true"/>
    <geom density="1000"/>
  </default>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
    <material name="floor_mat" texture="grid" texrepeat="8 8" reflectance=".2"/>
    <material name="ball_mat" texture="checks" texrepeat="2 2" texuniform="true"/>
    <texture name="checks" type = "2d" builtin="checker" width = '256' height='256' rgb1="1 0 0" rgb2="0 1 0"/>
  </asset>

  <worldbody>
    <geom size=".5 .5 .01" type="box" material="floor_mat"/>
    <light pos="0 0 .6"/>
    <camera name="top" pos="0 0 1" xyaxes="1 0 0 0 1 2"/>

    <!-- Target -->
    <body name="target" pos=".25 0 .03">
      <joint armature="0" axis="1 0 0" damping="0" limited="true" name="target_x" pos="0 0 0" range="0 .3" ref=".1" stiffness="0" type="slide"/>
      <joint armature="0" axis="0 1 0" damping="0" limited="true" name="target_y" pos="0 0 0" range="-.55 .35" ref="-.1" stiffness="0" type="slide"/>
      <geom name="target" type="box" size=".02 .02 .02" pos="0 0 0" rgba="1 0 0 1" friction=".7 .1 .1"/>
    </body>

    <!-- Agent -->
    <body name="ball" pos="0 0 .03">
      <joint axis="1 0 0" name="rotx" pos="0 0 0" range="-1 1" type="slide"/>
      <joint axis="0 1 0" name="roty" pos="0 0 0" range="-1 1" type="slide"/>
      <joint axis="0 0 1" name="rotz" pos="0 0 0" range="-1 0.02" type="slide"/>
      <geom name="ball" type="sphere" size=".02" material="ball_mat"/>
    </body>

<!--    &lt;!&ndash; Wall &ndash;&gt;-->
<!--    <body name="wall" pos="0.5 0.5 .02">-->
<!--      <geom name="top_wall" fromto="0 0 0 -1 0 0" type="capsule" size=".02" rgba="1 .5 0 1"/>-->
<!--      <geom name="left_wall" fromto="-1 0 0 -1 -1 0" type="capsule" size=".02" rgba="1 .5 0 1"/>-->
<!--      <geom name="bottom_wall" fromto="-1 -1 0 0 -1 0" type="capsule" size=".02" rgba="1 .5 0 1"/>-->
<!--      <geom name="right_wall" fromto="0 -1 0 0 0 0" type="capsule" size=".02" rgba="1 .5 0 1"/>-->
<!--    </body>-->

  </worldbody>


  <actuator>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="rotx"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" joint="roty"/>
  </actuator>

</mujoco>
